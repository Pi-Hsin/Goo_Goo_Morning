<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ggmbg"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_ggmname"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ggmname" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/arrow_pre"
            android:onClick="back_to_main_iv"/>

        <TextView
            android:id="@+id/game_tv_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_ggmname"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/white"
            android:gravity="center_vertical|left"
            android:text="12333"
            android:textColor="@drawable/white"
            android:textSize="70sp" />

        <ImageView
            android:id="@+id/cockatoo"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_below="@+id/iv_ggmname"
            android:layout_alignParentRight="true"
            android:layout_marginTop="32dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/cockatoo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_ggmname"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="鬧鐘遊戲"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/game_tv_empt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_tv_empty"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/white"
            android:gravity="center_vertical|left"
            android:text="12333"
            android:textColor="@drawable/white"
            android:textSize="90sp" />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_tv_empty"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="時間"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/setTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_tv_empty"
            android:layout_centerInParent="true"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="8dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:text="@string/str_default"
            android:textColor="@drawable/black">

        </TextView>


        <Button
            android:id="@+id/mButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_tv_empty"
            android:layout_centerInParent="true"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="8dp"
            android:textSize="32sp"
            android:text="@string/str_button1"
            android:visibility="visible"
            android:textColor="#00000000"
            android:background="#00000000"
            android:padding="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp">
        </Button>


        <Button
            android:id="@+id/mButton2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_below="@+id/game_tv_empty"
            android:layout_toRightOf="@id/mButton1"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="20dp"
            android:text="@string/str_button2"
            android:textColor="@drawable/black"
            android:textSize="10sp">
        </Button>

        <ToggleButton
            android:layout_below="@+id/game_tv_empty"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/mButton1"
            android:textOff=""
            android:textOn=""
            android:id="@+id/toggle_button1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/toggle_button_selector"/>

        <TextView
            android:id="@+id/game_tv_emp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_tv_empt"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/white"
            android:gravity="center_vertical|left"
            android:text="12333"
            android:textColor="@drawable/white"
            android:textSize="90sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/savebtn"
            android:layout_below="@+id/game_tv_emp"
            android:onClick="save_onclick"
            />


    </RelativeLayout>



</RelativeLayout>